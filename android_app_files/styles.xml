<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.SilentPanel" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary color -->
        <item name="colorPrimary">@color/purple_500</item>
        <!-- Dark variant of primary color -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <!-- Secondary color -->
        <item name="colorSecondary">@color/teal_200</item>
        <!-- Dark variant of secondary color -->
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <!-- Color displayed on top of primary color -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Color displayed on top of secondary color -->
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF8b5cf6</color>
    <color name="purple_700">#FF7c3aed</color>
    <color name="teal_200">#FF06b6d4</color>
    <color name="teal_700">#FF00897b</color>
    <color name="black">#FF000000</color>
    <color name="white">#FFFFFFFF</color>
</resources>
